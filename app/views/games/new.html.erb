<div class="container">
  <h1>New games</h1>
  <p><%= @letters %></p>

  <form action="/score" method="post">
    <input type="text" name="word" placeholder="Enter your word">
    <input type="submit">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>